      $('.testimonial-slider').slick({
        dots: true,
        infinite: true,
        speed: 500,
        slidesToShow: 1,
        adaptiveHeight: true,
        autoplay: true,
        autoplaySpeed: 7000
      });
      
      // FAQ Accordion
      $('.faq-question').click(function() {
  $(this).toggleClass('active');
  const answer = $(this).next('.faq-answer');
  answer.toggleClass('show');
});

      
    
      $('.menu-category-btn').click(function() {
        $('.menu-category-btn').removeClass('active');
        $(this).addClass('active');
        
        const category = $(this).data('category');
        
        if (category === 'all') {
          $('.menu-item').fadeIn(300);
        } else {
          $('.menu-item').each(function() {
            if ($(this).data('category') === category) {
              $(this).fadeIn(300);
            } else {
              $(this).fadeOut(300);
            }
          });
        }
      });
      
      
      $('.nav-link').click(function(e) {
        e.preventDefault();
        
        $('.nav-link').removeClass('active');
        $(this).addClass('active');
        
        const pageId = $(this).data('page');
        
        $('.page').removeClass('active');
        $('#' + pageId).addClass('active');
        

        $('html, body').animate({
          scrollTop: 0
        }, 300);
      });
      
   // Contact Form Submission
   $(document).ready(function() {
  $('#contactForm').submit(function(e) {
    e.preventDefault();
    
  
    $('.form-group').removeClass('has-error');
    $('.error-message').remove();

  
    const name = $('#name').val().trim();
    const email = $('#email').val().trim();
    const phone = $('#phone').val().trim();
    const subject = $('#subject').val();
    const message = $('#message').val().trim();

    let isValid = true;
    let firstErrorField = null;

    
    if (name === '') {
      showError('name', 'Name is required!');
      isValid = false;
      if (!firstErrorField) firstErrorField = $('#name');
    } else if (name.length < 3) {
      showError('name', 'Name must be 3+ characters!');
      isValid = false;
      if (!firstErrorField) firstErrorField = $('#name');
    }

    // Email (Required + Valid Format)
    if (email === '') {
      showError('email', 'Email is required!');
      isValid = false;
      if (!firstErrorField) firstErrorField = $('#email');
    } else if (!isValidEmail(email)) {
      showError('email', 'Invalid email format!');
      isValid = false;
      if (!firstErrorField) firstErrorField = $('#email');
    }

  
    if (phone !== '' && !isValidPhone(phone)) {
      showError('phone', 'Invalid phone number!');
      isValid = false;
      if (!firstErrorField) firstErrorField = $('#phone');
    }

  
    if (subject === '') {
      showError('subject', 'Subject is required!');
      isValid = false;
      if (!firstErrorField) firstErrorField = $('#subject');
    }

  
    if (message === '') {
      showError('message', 'Message is required!');
      isValid = false;
      if (!firstErrorField) firstErrorField = $('#message');
    } else if (message.length < 10) {
      showError('message', 'Message must be 10+ characters!');
      isValid = false;
      if (!firstErrorField) firstErrorField = $('#message');
    }


    if (isValid) {
      toastr.success('Form submitted successfully!');
      $('#contactForm')[0].reset(); 
    } else {
      toastr.error('Please fix errors in the form!');
      
      if (firstErrorField) {
        $('html, body').animate({
          scrollTop: firstErrorField.offset().top - 100
        }, 500);
      }
    }

    return false; 
  });
  function showError(fieldId, errorMsg) {
    $('#' + fieldId).closest('.form-group').addClass('has-error');
    $('#' + fieldId).after(`<p class="error-message text-danger">${errorMsg}</p>`);
  }


  function isValidEmail(email) {
    return /^[^\s@]+@[^\s@]+\.[^\s@]+$/.test(email);
  }


  function isValidPhone(phone) {
    return /^[0-9+\-()\s]{10,}$/.test(phone);
  }
});
      
  
      $('.social-sharing a').click(function(e) {
        e.preventDefault();
        const platform = $(this).attr('class').split(' ')[1];
        let shareUrl = '';
        const currentUrl = encodeURIComponent(window.location.href);
        const text = encodeURIComponent('Check out Juicy Delights - the best juice bar in town!');
        
        switch(platform) {
          case 'facebook':
            shareUrl = `https://www.facebook.com/sharer/sharer.php?u=${currentUrl}`;
            break;
          case 'twitter':
            shareUrl = `https://twitter.com/intent/tweet?url=${currentUrl}&text=${text}`;
            break;
          case 'instagram':
            toastr.info('Instagram sharing would open the app in a real implementation');
            return;
          case 'whatsapp':
            shareUrl = `https://wa.me/?text=${text}%20${currentUrl}`;
            break;
        }
        
        window.open(shareUrl, '_blank', 'width=600,height=400');
      });
      
      // Back to Top Button
      $(window).scroll(function() {
        if ($(this).scrollTop() > 300) {
          $('.back-to-top').addClass('active');
        } else {
          $('.back-to-top').removeClass('active');
        }
      });
      
      $('.back-to-top').click(function() {
        $('html, body').animate({ scrollTop: 0 }, 'smooth');
        return false;
      });
      
      // Initialize Calendar
      const calendarEl = document.getElementById('calendar');
      if (calendarEl) {
        const calendar = new FullCalendar.Calendar(calendarEl, {
          initialView: 'dayGridMonth',
          headerToolbar: {
            left: 'prev,next today',
            center: 'title',
            right: 'dayGridMonth,timeGridWeek,timeGridDay'
          },
          events: [
            {
              title: 'Juice Tasting',
              start: new Date(),
              end: new Date(),
              description: 'Free juice tasting session'
            },
            {
              title: 'Wellness Workshop',
              start: new Date(new Date().setDate(new Date().getDate() + 7)),
              end: new Date(new Date().setDate(new Date().getDate() + 7)),
              description: 'Learn about juice benefits'
            }
          ],
          eventClick: function(info) {
            toastr.info(info.event.title + ': ' + info.event.extendedProps.description);
          }
        });
        calendar.render();
      }
      
      
      function isValidEmail(email) {
        const re = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
        return re.test(email);
      }
      

      function animateOnScroll() {
        $('.animate__animated').each(function() {
          const elementPosition = $(this).offset().top;
          const scrollPosition = $(window).scrollTop() + $(window).height() * 0.8;
          
          if (elementPosition < scrollPosition) {
            $(this).addClass($(this).data('animate'));
          }
        });
      }
      
    
      animateOnScroll();
      
      
      $(window).scroll(function() {
        animateOnScroll();
      });
    });
  </script>
</body>
